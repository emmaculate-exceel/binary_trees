#include "binary_tree.h"
/**
 *binary_tree_insert_left - the function to create a left child node
 *@parent: the node to struct to create the left child
 *@value: the int value to be passed to the child
 *
 *Return: Always a pointer ;
 */

binary_tree_t *binary_tree_insert_left(binary_tree_t *parent, int value)
{
	binary_tree_t *newnode = (binary_tree_t *)malloc(sizeof(binary_tree_t));

	if (newnode == NULL)
	   return (NULL);

	newnode->parent = parent;
	newnode->left = left;
	newnode->right = NULL;
	newnode->n = value;

	return (newnode);
}